    <initializationActionList>
        <throwError>
            <text>This application has to be run on OS X 10.9 or above.</text>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
                <compareVersions>
                    <logic>less</logic>
                    <version1>${osx_major_version}</version1>
                    <version2>10.9</version2>
                </compareVersions>
            </ruleList>
        </throwError>
        <throwError>
            <ruleEvaluationLogic>or</ruleEvaluationLogic>
            <text>This application has to be run on Windows 7 or above.</text>
            <ruleList>
                <platformTest>
                    <type>windows-vista</type>
                </platformTest>
                <platformTest>
                    <type>windows-xp</type>
                </platformTest>
            </ruleList>
        </throwError>
    </initializationActionList>
    <preInstallationActionList>
        <setInstallerVariable>
            <name>installdir</name>
            <value>${user_home_directory}/Library/Application Support/Adobe/Lightroom/Modules</value>
            <ruleList>
                <platformTest>
                    <type>osx</type>
                </platformTest>
            </ruleList>
        </setInstallerVariable>
        <registryGet>
            <key>HKEY_LOCAL_MACHINE\SOFTWARE\${project.vendor}\${project.fullName}</key>
            <name>Location</name>
            <variable>installdir</variable>
            <ruleList>
                <platformTest>
                    <type>windows</type>
                </platformTest>
                <registryTest>
                    <key>HKEY_LOCAL_MACHINE\SOFTWARE\${project.vendor}\${project.fullName}</key>
                    <logic>exists</logic>
                    <name>Location</name>
                </registryTest>
            </ruleList>
        </registryGet>
    </preInstallationActionList>
    <compressionAlgorithm>lzma-ultra</compressionAlgorithm>
    <createOsxBundleDmg>1</createOsxBundleDmg>
    <enableRollback>1</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <height>400</height>
    <licenseFileEncoding>utf-8</licenseFileEncoding>
    <outputDirectory>..</outputDirectory>
    <readmeFileEncoding>utf-8</readmeFileEncoding>
    <saveRelativePaths>1</saveRelativePaths>
    <uninstallerDirectory>${installdir}/MIDI2LR.lrplugin</uninstallerDirectory>
    <uninstallerName>uninstallMIDI2LR</uninstallerName>
    <vendor>MIDI2LR</vendor>
    <width>600</width>
    <finalPageActionList>
        <launchBrowser>
            <explanation>Opens web browser showing the manual. Please bookmark the manual as there are many options and settings you can use in this program.</explanation>
            <progressText>View instructions.</progressText>
            <url>https://github.com/rsjaffe/MIDI2LR/wiki</url>
        </launchBrowser>
        <launchBrowser>
            <explanation>Opens a web browser with a PayPal form in which you can make a donation to support further development.</explanation>
            <progressText>Donate to development.</progressText>
            <url>https://www.paypal.com/cgi-bin/webscr?cmd=_s-xclick&amp;hosted_button_id=YWHT4JMA42RXN</url>
        </launchBrowser>
    </finalPageActionList>
    <parameterList>
